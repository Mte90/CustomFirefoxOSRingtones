{
  "name": "RingTone Picker for Firefox OS",
  "description": "Set as ringtone your ogg files present on sd card!",
  "type" : "privileged",
  "version": 1,
  "role": "system",
  "developer": {
    "name": "Daniele Scasciafratte alias Mte90",
    "url": "http://mte90.net"
  },
  "default_locale": "en",
  "permissions": {
    "device-storage:sdcard": {
      "access": "readonly"
    }
  },
  "installs_allowed_from": [
    "*"
  ],
  "activities": {
    "pick": {
      "filters": {
        "type": [
          "ringtone"
        ]
      },
      "disposition": "inline",
      "returnValue": true,
      "href": "/index.html"
    }
  },
  "icons": {
    "60": "/icons/60.png",
    "90": "/icons/90.png",
    "120": "/icons/120.png",
    "128": "/icons/128.png"
  }
}